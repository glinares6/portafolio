extends ../templates/template
//- block about
//-     h1 hola
block   menu
    - pageActive ='contact'
    include ../includes/main-menu
block title
    h1.title Contact
block main
    .contact
        .contact__form
            form.form-contact
                .form-contact__fields
                    input(type="text" name="name" placeholder="name").form-contact__input
                    input(type="text" name="email" placeholder="email").form-contact__input
                    input(type="text" name="subject" placeholder="subject").form-contact__input
                .form-contact__field
                    textarea(name="message" placeholder="message").form-contact__textarea
            .form-contact__field
                input(type="submit"   value="Send").form__submit
        .contact__map
             iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.8163652177695!2d-77.08670828555861!3d-12.05615254535682!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c946680d0099%3A0xc6def8804064a4e9!2sUniversidad%20Nacional%20Mayor%20de%20San%20Marcos!5e0!3m2!1ses-419!2spe!4v1649200599373!5m2!1ses-419!2spe',  style='border:0;', allowfullscreen='', referrerpolicy='no-referrer-when-downgrade')
             a(href="https://www.google.com/maps/@-12.173312,-76.9523712,13z"   target="_blank") 
                img(src="assets/map.png" alt="").contact__img-map
        .social
            .social__icon
                i.fa-brands.fa-twitter-square
                i.fa-brands.fa-twitter-square
            .social__icon
                i.fa-brands.fa-instagram
                i.fa-brands.fa-instagram
            .social__icon
                i.fa-brands.fa-youtube-square
                i.fa-brands.fa-youtube-square
            .social__icon
                i.fa-brands.fa-pinterest-square
                i.fa-brands.fa-pinterest-square
            
